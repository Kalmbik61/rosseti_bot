{
  "name": "priozerie-parser",
  "version": "1.0.0",
  "description": "Парсер для поиска данных по Приозерью",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "npm run build && node dist/index.js",
    "bot": "npm run build && node dist/bot.js",
    "bot:dev": "tsx watch src/bot.ts",
    "test": "npm run build && node dist/tests/test.js",
    "dev": "tsx watch src/index.ts",
    "dev:test": "tsx watch src/tests/test.ts",
    "clean": "rm -rf dist",
    "type-check": "tsc --noEmit",
    "playwright:install": "npx playwright install chromium"
  },
  "keywords": [
    "parser",
    "priozerie",
    "rosseti",
    "typescript",
    "playwright"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/node-telegram-bot-api": "^0.64.10",
    "better-sqlite3": "^12.2.0",
    "dotenv": "^17.2.1",
    "node-telegram-bot-api": "^0.66.0",
    "playwright": "^1.55.0",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "tsx": "^4.6.0",
    "typescript": "^5.3.0"
  }
}
